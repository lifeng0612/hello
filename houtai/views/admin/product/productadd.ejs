<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/public.css">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/edit.css">
    <script src="/ckeditor5/ckeditor.js"></script>
</head>

<body>
    <%- include("../common/header.ejs") %>
        <div class="container-fluid">
            <div class="col-md-2">
                <%- include("../common/aside.ejs") %>
            </div>
            <div class="col-md-10">
                <div class="panel panel-titles">
                    <div class="panel-footer panel-cents"> 商品管理&nbsp;&nbsp;/&nbsp;&nbsp;商品列表</div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-footer">增加商品</div>
                    <div class="panel-body">
                        <form style="padding-left: 30px !important; width: 50%;" action="/admin/toproudctadd" method="POST" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="">商品名称:</label>
                                <input type="text" name="title" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="">商品图片:</label>
                                <input type="file" name="pic" id="file" class="form-control" style="border: none; box-shadow: none;">
                            </div>
                            <div style="margin-bottom: 6px;">
                                <img src="" alt="" id="thumb" style="width: 100px; margin-left: 70px;">
                            </div>
                            <div class="form-group">
                                <label for="">商品价格:</label>
                                <input type="text" name="price" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="">商品邮费:</label>
                                <input type="text" name="postage" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="">商品描述:</label>
                                <textarea name="description" id="ckeditor" cols="30" rows="10" style="width: 100%;"></textarea>
                            </div>
                            <button type="submit" class="btn btn-default">提交</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <script>
            let ckeditor;
            ClassicEditor.create(document.querySelector("#ckeditor"))



            let file = document.querySelector("#file");
            let thumb = document.querySelector("#thumb");
            file.onchange = function() {
                let render = new FileReader();
                render.readAsDataURL(this.files[0]);
                console.log(this.files[0]);
                render.onload = function() {
                    thumb.src = render.result
                }
            }
        </script>
</body>

</html>